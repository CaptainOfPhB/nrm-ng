{
  "name": "nrm-ng",
  "version": "1.0.0-beta.1",
  "description": "The next generation of NPM registry management",
  "type": "module",
  "bin": "nrm",
  "main": "lib/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "nrm": "NODE_ENV=development ts-node --esm src/index.mts",
    "test": "ava",
    "test:coverage": "ava",
    "build": "tsup",
    "prepublishOnly": "pnpm coverage"
  },
  "tsup": {
    "clean": true,
    "minify": true,
    "format": ["esm"],
    "entry": ["src/index.mts"]
  },
  "keywords": [
    "npm",
    "nrm",
    "npm registry",
    "npm registry selector",
    "npm registry management",
    "npm registry next generation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CaptainOfPhB/nrm-ng"
  },
  "author": "CaptainOfPhB <captainofphb@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "commander": "^11.0.0",
    "execa": "7.1.1",
    "ini": "^4.1.1",
    "node-fetch": "^3.3.1",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.67",
    "@tsconfig/node16": "^16.1.0",
    "@types/ini": "^1.3.31",
    "@types/node": "^20.3.2",
    "ava": "^5.3.1",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^3.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=14.16.0"
  },
  "packageManager": "pnpm@8.6.5"
}